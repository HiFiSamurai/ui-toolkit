{
  "name": "ui-toolkit",
  "version": "1.0.0",
  "description": "Library of reusable components, styles, and variables",
  "author": "Maynard Russell <maynard.russell@gmail.com> (https://github.com/HiFiSamurai)",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HiFiSamurai/ui-toolkit.git"
  },
  "bugs": {
    "url": "https://github.com/HiFiSamurai/ui-toolkit/issues"
  },
  "scripts": {
    "clean": "del ./dist",
    "build": "npm run clean && npm run build-js && npm run build-sass && npm run build-css && npm run build-templates && npm run build-components",
    "build-js": "copyfiles ./src/js/*.js ./dist/js/ -f",
    "build-sass": "copyfiles ./src/sass/*.scss ./dist/sass/ -f",
    "build-css": "node-sass ./src/sass --output=./dist/css --output-style=compressed && npm run autoprefixer",
    "build-components": "copyfiles ./src/components/**/* ./dist/components/ -u 2",
    "build-templates": "copyfiles ./src/plop/* ./dist/plop/ -f",
    "autoprefixer": "postcss ./dist/css/*.css --use autoprefixer -d ./dist/css/",
    "install": "npm run build",
    "lint": "eslint src/js/",
    "stylelint": "stylelint src/sass",
    "plop": "plop --plopfile ./src/plop/config.js"
  },
  "browserslist": [
    "last 2 versions"
  ],
  "dependencies": {
    "@webcomponents/webcomponentsjs": "webcomponents/webcomponentsjs",
    "autoprefixer": "^6.7.5",
    "babel-eslint": "^8.0.3",
    "copyfiles": "^1.2.0",
    "del-cli": "^0.2.1",
    "eslint": "^4.13.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "node-sass": "^3.7.0",
    "plop": "^1.8.0",
    "postcss-cli": "^3.2.0",
    "stylelint": "^8.3.1",
    "uglify-js": "^2.6.2"
  }
}
